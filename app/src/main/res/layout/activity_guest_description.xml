<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redMain"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="8dp"
        android:backgroundTint="@color/whiteMain"
        android:background="@drawable/circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Tv_GuestDescription_UIDNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="uidNumber" />

        <TextView
            android:id="@+id/Tv_GuestDescription_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="NAME"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/Tv_GuestDescription_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="Phone"
            android:textSize="24dp" />

        <TextView
            android:layout_margin="8dp"
            android:id="@+id/Tv_GuestDescription_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description(work)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TvLr_DateAndTimeGuard"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Guard"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/Tv_GuestDescription_Guard_DateIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Date in"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/Tv_GuestDescription_Guard_DateExit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Date EXIT" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TvLr_DateAndTimeCitizen"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Citizen"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/Tv_GuestDescription_Citizen_DateIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Date in"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Tv_GuardOutID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="GUARD IN ID"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/Tv_GuardOut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="GUARD OUT ID"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>