<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".Activity.Guard.OTPActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP"
        android:textSize="32dp"
        android:gravity="center"
        android:textColor="@color/redMain"
        android:layout_margin="8dp"/>

    <EditText
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Ed_OTPCitizenLoginActivity_OTP"
        android:inputType="number"
        android:hint="OTP"/>

    <Button
        android:layout_width="match_parent"
        android:background="@color/redMain"
        android:layout_height="wrap_content"
        android:id="@+id/Btn_OTPCitizenLoginActivity_Verify"
        android:text="VERIFY"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter the OTP"
        android:gravity="center"
        android:layout_margin="8dp"/>

</LinearLayout>